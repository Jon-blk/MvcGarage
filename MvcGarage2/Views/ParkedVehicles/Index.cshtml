@model IEnumerable<MvcGarage2.Models.ParkedVehicle>


@{
    ViewData["Title"] = "Index";
}



<style>
    .styleAreaCheckin {
        padding-right: 12px;
        text-align: right;
    }

    .styleGroupBtn {
        padding-right: 0;
        text-align: right;
        padding: 0.4em;
    }

    .styleBtn {
        padding: 2px 12px 3px 12px;
        margin-left: 0.5em;
        margin-bottom: 0.5em;
        display: inline;
    }
</style>

<h1>Fordon i garaget</h1>

<p class="styleAreaCheckin">
    <a asp-action="Create">
        <input type="button" value="Checka in fordon" class="btn btn-xs btn-primary styleBtn" />
    </a>
</p>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <!-- VehicleType 	RegistrationNumber 	Brand 	Color 	ParkedTime  -->
                <th>
                    @Html.DisplayNameFor(model => model.VehicleType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegistrationNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    <!--  @@Html.DisplayNameFor(model => model.StartTime) -->
                    Parked time
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>

                        @{
                            var time = DateTime.Now - item.StartTime;
                            var tid = string.Format("{0} d, {1} t, {2} m, {3} s", time.Days, time.Hours, time.Minutes, time.Seconds);
                        }
                        <!-- @Html.DisplayFor(modelItem => item.StartTime); -->

                        <span>@tid</span>
                    </td>




                    <td class="styleGroupBtn">
                        @*<a asp-action="Edit" asp-route-id="@item.Id">Ändra</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Information</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Checka ut</a>*@

                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <input type="button" value="Ändra" class="btn btn-xs btn-info styleBtn" />
                        </a>

                        <a asp-action="Details" asp-route-id="@item.Id">
                            <input type="button" value="Detaljer" class="btn btn-md btn-info styleBtn" />
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <input type="button" value="Checka ut" class="btn btn-md btn-primary styleBtn" />
                        </a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p style="text-align:center;">
        The garage i empty
    </p>
}