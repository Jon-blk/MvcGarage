@model IEnumerable<MvcGarage2.Models.ParkedVehicle>


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <!-- VehicleType 	RegistrationNumber 	Brand 	Color 	ParkedTime  -->
                <th>
                    @Html.DisplayNameFor(model => model.VehicleType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegistrationNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    <!--  @@Html.DisplayNameFor(model => model.StartTime) -->
                    Parked time
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>

                        @{
                            var time = DateTime.Now - item.StartTime;
                            var tid = string.Format("{0} d, {1} t, {2} m, {3} s", time.Days, time.Hours, time.Minutes, time.Seconds);
                        }
                        <!-- @Html.DisplayFor(modelItem => item.StartTime); -->

                        <span>@tid</span>
                    </td>


                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
        <p style="text-align:center;">
            The garage i empty
        </p>
}