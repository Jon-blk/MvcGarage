        Betalt @{Write($"{Model.CurrentPrice:C2}");}
  


    </strong>
    <hr />

    <dl class="row">
        <dt class="col-sm-4 table-responsive-md">
            @Html.DisplayNameFor(model => model.ParkedVehicle.RegistrationNumber)
