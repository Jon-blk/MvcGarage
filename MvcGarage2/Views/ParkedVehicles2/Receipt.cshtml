        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Member.Name)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Member.Name)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.ParkedVehicle.StartTime)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ParkedVehicle.StartTime)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.CurrentPrice)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.CurrentPrice)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.ParkedVehicle.Color)
