@model MvcGarage2.Models.VehiclePriceViewModel
@{Layout = "_Layout";}

@{
    ViewData["Title"] = "Kvitto";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Avslutad parkering</h4>
