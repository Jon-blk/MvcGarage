        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ParkedVehicle.RegistrationNumber)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.ParkedVehicle.Brand)
        </dt>
        <dd class="col-sm-8">
