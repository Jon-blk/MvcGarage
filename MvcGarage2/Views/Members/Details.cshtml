@model MvcGarage2.Models.Member

@{
    ViewData["Title"] = "Detaljer";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Parkering</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ParkedVehicles)
        </dt>
        <dt class="col-sm-9">
            @foreach (var parking in Model.ParkedVehicles)
            {
                <a asp-controller="ParkedVehicles2" asp-action="Details" asp-route-id="@parking.Id">
                    @parking.RegistrationNumber (@Html.DisplayFor(p => parking.Color) @parking.Brand @parking.VehicleModel)
                </a><br />
            }
        </dt>
    </dl>
</div>
<div>
    <a asp-action="Delete" asp-route-id="@Model.Id">
        <input type="submit" value="Avsluta medlemskap" class="btn btn-danger" />
    </a>
    <a class="btn btn-secondary" asp-action="Edit" role="button" asp-route-id="@Model.Id">Redigera</a>
</div>
<partial name="_BackToIndexPartial" />
