@model MvcGarage2.Models.Member

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParkedVehicles)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.ParkedVehicles)
            {
                <a asp-controller="=ParkedVehicles" asp-action="Details" asp-route-id="@item.Id" @item.RegistrationNumber></a><br />

            }

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
